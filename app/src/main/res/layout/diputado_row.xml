<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/diputadoNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Nombre:" />

    <TextView
        android:id="@+id/diputadoNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Nombre diputado"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currul:"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Currul"
        android:id="@+id/diputadoCurrul"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/diputadoNombre"
        android:layout_alignStart="@+id/diputadoNombre" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entidad:"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Entidad"
        android:id="@+id/diputadoEntidad"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/diputadoCurrul"
        android:layout_alignStart="@+id/diputadoCurrul" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suplente:"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Suplente"
        android:id="@+id/diputadoSuplente"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/diputadoNombre"
        android:layout_alignStart="@+id/diputadoNombre" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fraccion:"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fraccion"
        android:id="@+id/diputadoFraccion"
        android:layout_below="@+id/diputadoEntidad"
        android:layout_alignLeft="@+id/diputadoEntidad"
        android:layout_alignStart="@+id/diputadoEntidad" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo Eleccion:"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TipoEleccion"
        android:id="@+id/diputadoTipoEleccion"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/diputadoCurrul"
        android:layout_toEndOf="@+id/diputadoCurrul" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/diputadoEmail"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/diputadoFraccion"
        android:layout_alignStart="@+id/diputadoFraccion" />

</RelativeLayout>