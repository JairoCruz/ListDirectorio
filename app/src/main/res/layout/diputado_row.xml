<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/diputadoNombre"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Nombre:" />

            <TextView
                android:id="@+id/diputadoNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:text="Nombre diputado"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fraccion:"
                android:layout_alignTop="@+id/diputadoFraccion"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView" />

            <TextView
                android:id="@+id/diputadoFraccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fraccion"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/diputadoNombre"
                android:layout_alignLeft="@+id/diputadoNombre"
                android:layout_alignStart="@+id/diputadoNombre" />

        </RelativeLayout>



